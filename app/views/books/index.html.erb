<h1>Books</h1>
<table>
　<thead>
　　<tr>
　　　<th>Title</th>
　　　<th>Body</th>
　　</tr>
　</thead>

<tbody>
　<% @books.each do |book| %>
　　<tr>
　　　<td><%= book.title %></td>
　　　<td><%= book.body %></td>
　　　<td>
　　　　<%= link_to "Show", book_path(book) %>
　　　　<%= link_to "Edit", edit_book_path(book) %>
　　　　<%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %>
　　　</td>
　　</tr>
　<% end %>
</tbody>
</table>

<h3>New book</h3>
<%= form_for(@book, url:'/books') do |f| %>
　<h4>Title</h4>
　<%= f.text_field :title %>
　<h4>Body</h4>
　<%= f.text_area :body %>
　<%= f.submit 'Create Book' %>
<% end %>

<% if @book.errors.any? %>
　<p>errors prohibited this book from being saved:</p>
　<ul>
 　<% @book.errors.full_messages.each do |message| %><li><%= message %></li>
　</ul>
<% end %>
<% end %>